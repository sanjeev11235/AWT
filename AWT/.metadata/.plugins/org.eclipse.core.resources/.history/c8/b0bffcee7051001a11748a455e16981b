package com.example;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.CardLayout;
import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.GridBagLayout;
import java.awt.GridLayout;
import java.awt.HeadlessException;
import java.awt.TextField;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BoxLayout;
import javax.swing.GroupLayout;
import javax.swing.OverlayLayout;
import javax.swing.SpringLayout;

public class Assignment2 extends Frame implements ActionListener{
	
	private TextField t1, t2, t3;
	private Button b1, b2, b3, b4, b5;

	public Assignment2() throws HeadlessException {
		setSize(600, 300);
		setVisible(true);
		setLocation(100, 100);
		setLayout(new GridLayout(3,3, 10, 10));
		
		t1 = new TextField();
		t2 = new TextField();
		t3 = new TextField();
		
		b1 = new Button("+");
		b1.setSize(100,50);
		b2 = new Button("-");
		b2.setSize(100,50);
		b3 = new Button("*");
		b3.setSize(100,50);
		b4 = new Button("/");
		b4.setSize(100,50);
		b5 = new Button("reset");
		b5.setSize(100,50);
		
		b1.addActionListener(this);
		b2.addActionListener(this);
		b3.addActionListener(this);
		b4.addActionListener(this);
		b5.addActionListener(this);
		
		add(t1);add(t2);add(t3);
		add(b1);add(b2);add(b3);add(b4);add(b5);
		
	}

	public static void main(String[] args) {
		Assignment2 a= new Assignment2();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		
		if(e.getSource() == b1) {
			System.out.println(t1.getText() +" here "+t2.getText());
			if(t1.getText().toString().equals("") && t2.getText().toString().equals("")) {
				t1.setBackground(Color.red);
				t2.setBackground(Color.red);
				System.out.println("Addition");
			}
			else {
				System.out.println("else of b1");
				t1.setBackground(Color.white);
				t2.setBackground(Color.white);
				t3.setText(String.valueOf( Integer.parseInt(t1.getText()) + Integer.parseInt(t2.getText())));
			}
		}
	
		if(e.getSource() == b2) {
			System.out.println("Substraction");
		}
		if(e.getSource() == b3) {
			System.out.println("Multiplication");
		}
		if(e.getSource() == b4) {
			System.out.println("Division");
		}
		if(e.getSource() == b5) {
			System.out.println("Reset All");
			t1.setText("");			t2.setText("");			t3.setText("");
		}
	}
}
